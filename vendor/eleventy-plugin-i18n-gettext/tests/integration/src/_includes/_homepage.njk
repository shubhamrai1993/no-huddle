<div class="jumbotron">
  <h1>{{ _('Fruits') }}{% if eatSnails %} üêå{% endif %}</h1>
</div>

{%- for fruit in fruits -%}
<div class="card">
  <div class="card-body">
    <a href="{{ _p(fruit.path) | url }}">
      <h4 class="card-title">{{ _(fruit.name) }}</h4>
    </a>
    <div class="card-text">
      <div class="row">
        <div class="col-3"></div>
        <div class="col-4"><b>Method calls</b></div>
        <div class="col-4"><b>Shortcodes</b></div>
      </div>

      <div class="row">
        <div class="col-3"><b>Template content</b></div>
        <div class="col-4">{{ _('Click on the fruit to see more details.') }}</div>
        <div class="col-4">{% _ locale, 'Click on the fruit to see more details.' %}</div>
      </div>
      <div class="row">
        <div class="col-3"><b>Template content pluralized</b></div>
        <div class="col-4">{{ _n('This fruit is excellent.', 'These fruits are excellent.', fruit.count) }}</div>
        <div class="col-4">{% _n locale, 'This fruit is excellent.', 'These fruits are excellent.', fruit.count %}</div>
      </div>
      <div class="row">
        <div class="col-3"><b>Template content with text replacment</b></div>
        <div class="col-4">{{ _('The %s keeps the doctor away.', _(fruit.name) | lower) }}</div>
        <div class="col-4">{% _ locale, 'The %s keeps the doctor away.', _(fruit.name) | lower %}</div>
      </div>
      <div class="row">
        <div class="col-12"><hr/></div>
      </div>
      <div class="row">
        <div class="col-3"><b>Data content</b></div>
        <div class="col-4">{{ _(fruit.color + ' ' + fruit.name | lower) }}</div>
        <div class="col-4">{% _ locale, fruit.color + ' ' + fruit.name | lower %}</div>
      </div>
      <div class="row">
        <div class="col-3"><b>Data content pluralized with text replacment</b></div>
        {%- set fruity = _n(fruit.color + ' ' + fruit.name | lower, fruit.color + ' ' + fruit.plural | lower, fruit.count) -%}
        <div class="col-4">{{ _('We currently have %d %s in stock.', fruit.count, fruity | lower) }}</div>
        <div class="col-4">{% _ locale, 'We currently have %d %s in stock.', fruit.count, fruity | lower %}</div>
      </div>
      <div class="row">
        <div class="col-12"><hr/></div>
      </div>
      <div class="row">
        <div class="col-3"><b>String interpolation</b></div>
        <div class="col-4">{{ _i('The ${name} keeps the doctor away (${count}).', { name: _(fruit.name) | lower, count: fruit.count }) }}</div>
        <div class="col-4">{% _i locale, 'The ${name} keeps the doctor away (${count}).', { count: fruit.count, name: _(fruit.name) | lower } %}</div>
      </div>
      <div class="row">
        <div class="col-3"><b>String interpolation pluralized</b></div>
        <div class="col-4">{{ _ni('This single fruit is excellent.', 'These ${count} fruits are excellent.', fruit.count, { count: fruit.count }) }}</div>
        <div class="col-4">{% _ni locale, 'This single fruit is excellent.', 'These ${count} fruits are excellent.', fruit.count, { count: fruit.count } %}</div>
      </div>
      <div class="row">
        <div class="col-12"><hr/></div>
      </div>
      <div class="row">
        <div class="col-3"><b>Localize URL</b></div>
        <div class="col-4">{{ _p('/index.html') | url }}</div>
        <div class="col-4">{% _p locale, '/index.html' | url %}</div>
      </div>
      <div class="row">
        <div class="col-3"><b>Relocalize /pt-pt/index.html to fr-fr</b></div>
        <div class="col-4"></div>
        <div class="col-4">{% relocalizePath 'fr-fr', '/pt-pt/index.html' %}</div>
      </div>
    </div>
  </div>
</div>
{%- endfor -%}

<div class="jumbotron">
  <h1>{{ _('Dates and times') }}</h1>
</div>

<div class="card">
  <div class="card-body">
    <a target="_blank" href="https://momentjs.com/docs/#/displaying/format">
      <h4 class="card-title">{{ _('Moment.js localized formats') }}</h4>
    </a>
    <div class="card-text">
      <div class="row">
        <div class="col-2"></div>
        <div class="col-5"><b>Method calls (UTC)</b></div>
        <div class="col-5"><b>Shortcodes (Asia/Bangkok)</b></div>
      </div>
      {%- for moment in moments -%}
        <div class="row">
          <div class="col-2"><b>{{ moment.format }}</b></div>
          <div class="col-5">{{ _d(moment.format, '2020-08-01T21:57:00.000Z', 'UTC') }}</div>
          <div class="col-5">{% _d locale, moment.format, 1596319020000, 'Asia/Bangkok' %}</div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>